<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="bulma.min.css" />
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
  </head>
  <body>
    <section class="section">
      <div class="maincolumns columns is-desktop is-vcentered">
        <div class="column is-10 is-offset-1 notification is-info is-light box container">
          <div class="title">Reviews</div>
          <% if (locals.restaurant) { %>
          <div class="table-container">
            <table class="table is-bordered is-hoverable is-striped is-narrow">
              <thead>
                <tr>
                  <th>Reviewer</th>
                  <th>Details</th>
                  <th>Rating</th>
                  <th>&nbsp;</th>
                </tr>
              </thead>
              <% let i=0; %> <% for(i=0; i < restaurant.length; i++) { %>
              <tr>
                <td><%= restaurant[i].reviewer_name %></td>
                <td><%= restaurant[i].details %></td>
                <td><%= restaurant[i].rating %></td>
                <td>
                  <form action="/deleteReview?id/<%= restaurant[i].review_id %>?_method=DELETE" method="post">
                    <button type="submit" class="button is-danger">
                      <span class="icon is-small">
                        <i class="fas fa-trash"></i>
                      </span>
                    </button>
                  </form>
                </td>
              </tr>
              <% } %>
              <tfoot>
                <tr>
                  <td colspan="4">There are <%= i %> reviews.</td>
                </tr>
              </tfoot>
            </table>
          </div>
          <% } %>
          <form action="/addReview" method="post">
            <div class="field is-horizontal">
              <div class="field-label is-normal">
                <label class="label">Add Review</label>
              </div>
              <div class="field-body">
                <div class="field">
                  <p class="control is-expanded">
                    <input name="reviewer_name" class="input" type="text" placeholder="Your Name" />
                  </p>
                </div>
                <div class="field">
                  <p class="control is-expanded">
                    <input name="details" class="input" type="text" placeholder="Review Details" />
                  </p>
                </div>
                <div class="field">
                  <p class="control is-expanded">
                    <input name="rating" class="input" type="number" min="1" max="5" placeholder="Rating (1-5)" />
                  </p>
                </div>
                <div class="field">
                  <button class="button is-link">
                    <span>Add</span>
                    <span class="icon is-small">
                      <i class="fas fa-user-plus"></i>
                    </span>
                  </button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </section>
  </body>
</html>
